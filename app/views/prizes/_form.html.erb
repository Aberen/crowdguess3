<div class="form-container py-6">
  <%= form_for @prize do |f| %>
    
    <% if @prize.errors.any? %>
      <div class="error-container rounded-lg bg-red-600 p-4 text-white mb-4">
        <div class="error-summary">
          <h2 class="text-lg font-bold pb-4"><%= pluralize(@prize.errors.count, "error") %> prohibited this prize from being saved:</h2>
          <ul>
            <% @prize.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :key %><br />
      <%= f.text_area :key %>
    </div>
    <div class="actions">
      <%= submit_form_button %>
    </div>
  <% end %>
</div>
